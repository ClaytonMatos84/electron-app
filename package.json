{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "Electron app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder"
  },
  "author": {
    "name": "Clayton Matos",
    "email": "clayton.a.matos@gmail.com"
  },
  "license": "ISC",
  "devDependencies": {
    "electron": "^35.1.2",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "my-app-id",
    "productName": "ElectronVue",
    "copyright": "Copyright Â© 2025 ${author}",
    "linux": {
      "target": [
        "snap",
        "AppImage"
      ]
    },
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    }
  }
}
